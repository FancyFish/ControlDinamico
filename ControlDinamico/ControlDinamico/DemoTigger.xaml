<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ControlDinamico.DemoTigger">
    <ContentPage.Content>
        <StackLayout>
            <TableView Intent="Form"
                       HasUnevenRows="True">
                <TableSection Title="Ejercicio">
                    <EntryCell x:Name="Titulo"
                               Label="Titulo"
                               Placeholder="Ingresar título">
                    </EntryCell>
                    <EntryCell x:Name="Autor"
                               Label="Autor"
                               Placeholder="Ingresar autor">
                    </EntryCell>
                    <EntryCell x:Name="Area"
                               Label="Area"
                               Placeholder="Ingresar área">
                    </EntryCell>
                </TableSection>
            </TableView>

            <Button x:Name="btnEnviar"
                    Text="Enviar"></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>